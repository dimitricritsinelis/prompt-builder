{
  "name": "tauri-app",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host 127.0.0.1 --strictPort",
    "build": "tsc && vite build",
    "lint": "tsc --noEmit",
    "test": "vitest run",
    "prompt": "pnpm prompt:clean && tauri dev --no-watch",
    "preview": "vite preview",
    "tauri": "tauri",
    "prompt:clean": "pnpm exec kill-port 1420 && pids=$(lsof -t src-tauri/target/debug/.cargo-lock 2>/dev/null || true); if [ -n \"$pids\" ]; then kill -9 $pids; fi; pkill -f 'target/debug/tauri-app' || true",
    "verify": "pnpm lint && pnpm test && pnpm build && cargo check --manifest-path src-tauri/Cargo.toml --no-default-features"
  },
  "dependencies": {
    "@dqbd/tiktoken": "^1.0.22",
    "@fontsource/source-serif-4": "^5.2.9",
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-opener": "^2",
    "@tiptap/core": "^3.19.0",
    "@tiptap/extension-code-block": "^3.19.0",
    "@tiptap/extension-link": "^3.19.0",
    "@tiptap/extension-placeholder": "^3.19.0",
    "@tiptap/extension-task-item": "^3.19.0",
    "@tiptap/extension-task-list": "^3.19.0",
    "@tiptap/extension-text-align": "^3.19.0",
    "@tiptap/extension-typography": "^3.19.0",
    "@tiptap/extension-underline": "^3.19.0",
    "@tiptap/pm": "^3.20.0",
    "@tiptap/react": "^3.19.0",
    "@tiptap/starter-kit": "^3.19.0",
    "@tiptap/suggestion": "^3.19.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "autoprefixer": "^10.4.24",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.3",
    "vite": "^7.0.4",
    "vitest": "^4.0.18",
    "kill-port": "^2.0.1"
  }
}
